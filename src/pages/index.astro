<Layout>
	<div style="text-align: center; margin-top: 8px; margin-bottom: 8px;">
		<h1 class="title" style="font-family: Verdana, Geneva, sans-serif; font-weight: bold;">Codenames Pictures</h1>
	</div>

	<div class="top-left-container">
		<button class="buttonNG" onclick="NewGame();">
			<span>New Game</span>
		</button>

		<div class="spymaster-container">
			<span class="spy">Spymaster:</span>
			<label class="switch">
			<input type="checkbox" id="spymaster-btn" onclick="spymaster();" />
			<span class="slider round"></span>
			</label>
		</div>
	</div>


	<div class="grid-container">
		{Array.from({ length: 20 }).map((_, i) => (
			<div class="tile" onclick={`revealCard(${i});`}>
